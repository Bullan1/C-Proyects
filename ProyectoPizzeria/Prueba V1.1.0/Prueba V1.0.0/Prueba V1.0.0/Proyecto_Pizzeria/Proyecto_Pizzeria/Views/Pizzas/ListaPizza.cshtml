@model IEnumerable<Proyecto_Pizzeria.Models.Pizzas>

@{
    ViewBag.Title = "ListaPizza";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListaPizza</title>
</head>
<body>
    <br />
    <br />
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TamañoPizza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TamañoPizza)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disponible)
                </td>
                <td>
                    @Html.ActionLink("EditarPizza", "EditarPizza", new { id = item.IdPizza }) |
                    @Html.ActionLink("DetallePizza", "DetallePizza", new { id = item.IdPizza }) |
                    @Html.ActionLink("BorrarPizza", "BorrarPizza", new { id = item.IdPizza })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Añadir Pizza", "CrearPizza")
    </p>
</body>
</html>
