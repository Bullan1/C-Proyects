@model GestionCineAPP.Models.Usuarios

@{
    ViewBag.Title = "AccesoUsuario";
}

<h2>Acceso de Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.CorreoElectronico)
        @Html.TextBoxFor(model => model.CorreoElectronico, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Clave)
        @Html.PasswordFor(model => model.Clave, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Acceso</button>
    @Html.ActionLink("Registrarse ?", "Registro","Registro")
}